@page "/"
@inherits ProductsBase

@if(Products == null)
{
    <h3>Loading products.....</h3>
    <DisplayLoading/>
}
else
{
    <h3 class="mb-5">Products</h3>

    var productCount = Products.Count();

    @if (productCount > 0)
    {
        @foreach(var proGroup in GetGroupProductsByCategory())
        {
            <h4>@GetCategoryName(proGroup)</h4>

            <div class= "row mt-3">
              <DisplayProducts Products="@proGroup.Take(4)"></DisplayProducts>
            </div>
            <hr class="mb-3" />
            
        }
    }
}
